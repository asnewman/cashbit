extends Layout

block content
    h1 Log a habit ✍️
    small
        a(href="/accomplishments") 👉 #{text.view_accomp}
    br
    small
        a(href="/habits") 👉 #{text.manage} 
    br
    br
    p Select a habit from below to log:
    each habit in habits
        form(action="/log" method="post")
            input(class="hidden" type="text" name=`${habit.id}`)
            button(type="submit") #{habit.name}
